// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Machinery {
  id          String   @id @default(cuid())
  name        String
  nameAz     String   @map("name_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  category    String
  categoryAz  String   @map("category_az")
  pricePerDay Float    @map("price_per_day")
  imageUrl    String?  @map("image_url")
  isAvailable Boolean  @default(true) @map("is_available")
  specifications Json? // JSON field for flexible specs
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  rentals     Rental[]
  
  @@map("machinery")
}

model Customer {
  id          String   @id @default(cuid())
  firstName   String   @map("first_name")
  lastName    String   @map("last_name")
  email       String   @unique
  phone       String
  company     String?
  address     String?  @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  rentals     Rental[]
  
  @@map("customers")
}

model Rental {
  id          String   @id @default(cuid())
  machineryId String   @map("machinery_id")
  customerId  String   @map("customer_id")
  startDate   DateTime @map("start_date")
  endDate     DateTime @map("end_date")
  totalPrice  Float    @map("total_price")
  status      String   @default("pending") // pending, confirmed, completed, cancelled
  notes       String?  @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  machinery   Machinery @relation(fields: [machineryId], references: [id])
  customer    Customer  @relation(fields: [customerId], references: [id])
  
  @@map("rentals")
}

model Slider {
  id          String   @id @default(cuid())
  title       String
  titleAz     String   @map("title_az")
  subtitle    String?  @db.Text
  subtitleAz  String?  @map("subtitle_az") @db.Text
  imageUrl    String   @map("image_url")
  buttonText  String?  @map("button_text")
  buttonTextAz String? @map("button_text_az")
  buttonLink  String?  @map("button_link")
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("sliders")
}

model HomeSection {
  id          String   @id @default(cuid())
  sectionType String   @map("section_type") // features, cta, etc.
  title       String?
  titleAz     String?  @map("title_az")
  content     String?  @db.Text
  contentAz   String?  @map("content_az") @db.Text
  isActive    Boolean  @default(true) @map("is_active")
  order       Int      @default(0)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("home_sections")
}

model Feature {
  id          String   @id @default(cuid())
  title       String
  titleAz     String   @map("title_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  icon        String?  // SVG path or icon name
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("features")
}

model AboutSection {
  id          String   @id @default(cuid())
  title       String?  @map("title_az")
  content     String?  @map("content_az") @db.Text
  imageUrl    String?  @map("image_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("about_sections")
}

model Service {
  id          String   @id @default(cuid())
  title       String
  titleAz     String   @map("title_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  icon        String?  // Icon name or SVG
  imageUrl    String?  @map("image_url")
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("services")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  titleAz     String   @map("title_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  imageUrl    String?  @map("image_url")
  location    String?  // Project location
  locationAz  String?  @map("location_az")
  contractor  String?  // Contractor company
  contractorAz String? @map("contractor_az")
  startDate   DateTime? @map("start_date")
  endDate     DateTime? @map("end_date")
  status      String?  // completed, ongoing, planned
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("projects")
}

model EquipmentCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  nameAz      String   @map("name_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  imageUrl    String?  @map("image_url")
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  equipment   EquipmentPark[]
  
  @@map("equipment_categories")
}

model EquipmentPark {
  id          String   @id @default(cuid())
  title       String
  titleAz     String   @map("title_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  categoryId  String?  @map("category_id")
  imageUrl    String?  @map("image_url")
  specifications Json? // JSON field for specs
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  category    EquipmentCategory? @relation(fields: [categoryId], references: [id])
  
  @@map("equipment_park")
}

model News {
  id          String   @id @default(cuid())
  title       String
  titleAz     String   @map("title_az")
  content     String?  @db.Text
  contentAz   String?  @map("content_az") @db.Text
  imageUrl    String?  @map("image_url")
  category    String?  // news, update, project
  categoryAz  String?  @map("category_az")
  publishedAt DateTime? @map("published_at")
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("news")
}

model Career {
  id          String   @id @default(cuid())
  title       String
  titleAz     String   @map("title_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  requirements String? @db.Text
  requirementsAz String? @map("requirements_az") @db.Text
  location    String?
  locationAz  String?  @map("location_az")
  type        String?  // full-time, part-time, contract
  typeAz      String?  @map("type_az")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("careers")
}

model Certificate {
  id          String   @id @default(cuid())
  title       String
  titleAz     String   @map("title_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  imageUrl    String?  @map("image_url")
  issuer      String?  // Certificate issuer
  issuerAz    String?  @map("issuer_az")
  issueDate   DateTime? @map("issue_date")
  expiryDate  DateTime? @map("expiry_date")
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("certificates")
}

model Partner {
  id          String   @id @default(cuid())
  name        String
  nameAz      String?  @map("name_az")
  description String?  @db.Text
  descriptionAz String? @map("description_az") @db.Text
  logoUrl     String?  @map("logo_url")
  website     String?
  category    String?  // contractor, supplier, client
  categoryAz  String?  @map("category_az")
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("partners")
}

model Admin {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String   // Hashed password
  email     String?  @unique
  name      String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@map("admins")
}

model SiteSettings {
  id          String   @id @default(cuid())
  siteName    String?  @map("site_name")
  siteNameAz  String?  @map("site_name_az")
  slogan      String?  @db.Text
  sloganAz    String?  @map("slogan_az") @db.Text
  logoUrl     String?  @map("logo_url")
  faviconUrl  String?  @map("favicon_url")
  email       String?
  facebook    String?
  instagram   String?
  linkedin   String?
  twitter     String?
  youtube     String?
  whatsapp    String?
  mapUrl      String?  @map("map_url") @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  contactInfo ContactInfo[]
  
  @@map("site_settings")
}

model ContactInfo {
  id          String   @id @default(cuid())
  type        String   // phone, address, email
  label       String?  // Məsələn: "Əsas ofis", "Satış şöbəsi"
  labelAz     String?  @map("label_az")
  value       String   @db.Text
  valueAz     String?  @map("value_az") @db.Text
  order       Int      @default(0)
  isActive    Boolean  @default(true) @map("is_active")
  settingsId  String?  @map("settings_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  settings    SiteSettings? @relation(fields: [settingsId], references: [id])
  
  @@map("contact_info")
}

model ContactMessage {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String
  subject     String
  message     String   @db.Text
  isRead      Boolean  @default(false) @map("is_read")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("contact_messages")
}

